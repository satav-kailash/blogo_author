<%= form_with model: article, data: {turbo: false} do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= article.errors.full_messages_for(:title).each do |messages| %>
    <div> <%= messages %> </div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
    <%= article.errors.full_messages_for(:body).each do |messages| %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>